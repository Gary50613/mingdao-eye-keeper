{
	"name": "明道學護眼裝置",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": [
		"webRequest",
		"webRequestBlocking"
	],
	"host_permissions": [
		"*://*.mingdao.edu.tw/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.mingdao.edu.tw/*"
			],
			"js": [
				"darker.js"
			],
			"css": [
				"darker.css"
			]
		},
		{
			"matches": [
				"*://libauto.mingdao.edu.tw/AACourses/Web/qWTT.php"
			],
			"css": [
				"class.css"
			]
		}
	],
	"action": {}
}